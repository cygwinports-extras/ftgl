DESCRIPTION="OpenGL font rendering library"
HOMEPAGE="http://ftgl.wiki.sourceforge.net/"
SRC_URI="mirror://sourceforge/ftgl/${P/_/-}.tar.bz2"
SRC_DIR=${P/_/\~}

PKG_NAMES="lib${PN}2 lib${PN}-devel"
libftgl2_CONTENTS="--exclude=html usr/bin/cygftgl-2.dll usr/share/doc/"
libftgl_devel_CONTENTS="usr/include/ usr/lib/ usr/share/doc/${PN}/html/"

# for toplevel Makefile, not sure why this isn't already defined...
MAKEOPTS+=" ECHO=echo"

KEEP_LA_FILES="none"
